{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "jsx": "react-native",

    "rootDir": "src",
    "outDir": "dist",

    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": false,

    "strict": true,
    "skipLibCheck": true,

    "moduleResolution": "node",

    "lib": ["ES2019"],
    "types": ["react", "react-native"],

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
